/* pages/posts/posts.wxss */

swiper{
  width: 100%;
  height: 460rpx;
}

swiper image{
  width: 100%;
  height: 460rpx;
}

.post-container{
  display: flex;
  flex-direction: column;
  border-top: 1px solid #e3e3e3;
  margin: 20rpx 0 40rpx 0;
}

.post-container .post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
}

.post-author{
  width: 100rpx;
  height: 100rpx;
}

.post-date{
  margin-left: 10rpx;
  color: #333;
}

.post-title{
  font-weight: bold;
  margin: 10rpx 0 20rpx;
}

.post-image{
  width: 100%;
  height: 340rpx;
}

.post-content{
  line-height: 40rpx;
  letter-spacing: 2rpx;
  margin: 20rpx 0 20rpx 10rpx;
}

.post-like{
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.post-like-img{
  margin: 0 10rpx 0 10rpx;
}

.post-like-text{
  font-size: 22rpx;
  margin-right: 10rpx;
}